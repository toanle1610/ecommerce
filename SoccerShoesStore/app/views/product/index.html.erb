<h1>Products</h1>
<%= render partial: "product" %>
<div>
  <% @products.each do |product|%>
    <div class="pattern">
      <%= image_tag product.image, size: "200x200" %>
      <p> <%= product.name%> </p>
      <%= link_to 'View Details', product_show_url(product.id), :class => "btn" %>
      <%= button_to "Add to Cart", order_new_path(shoeid:product.id), :method => :post, :class => "btn" %>
      <%= button_to "Remove from Cart", order_remove_path(shoeid:product.id), :method => :post, :class => "btn" %>
    </div>
  <% end %>
</div>